<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:id="@+id/ll0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_0.5"
            android:background="@color/line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMsg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/btn_msg_selector"
                android:scaleType="matrix"
                android:text="消息"
                android:padding="@dimen/panding_3"
                android:textColor="@color/tar_n"
                android:layout_centerVertical="true"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnCustomer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/btn_customer_selector"
                android:scaleType="matrix"
                android:text="客户"
                android:padding="@dimen/panding_3"
                android:textColor="@color/tar_n"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnManager"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/btn_manager_selector"
                android:scaleType="matrix"
                android:text="管理"
                android:padding="@dimen/panding_3"
                android:textColor="@color/tar_n"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnMy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/btn_my_selector"
                android:scaleType="matrix"
                android:text="我的"
                android:padding="@dimen/panding_3"
                android:textColor="@color/tar_n"
                android:textSize="11sp" />



        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll0"></RelativeLayout>

</RelativeLayout>
